<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <FrameLayout
          android:id="@+id/localFrameLayout"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_margin="5dp"
          android:layout_height="match_parent"/>

        <SurfaceView
          android:id="@+id/remoteRTCFrameLayout"
          android:layout_width="0dp"
            android:layout_weight="1"
          android:layout_height="match_parent"/>


      </LinearLayout>

      <EditText
        android:id="@+id/editRoomId"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

      <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:onClick="rtcClick"
        android:textAllCaps="false"
        android:text="finish"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/btnJoinRoom"
        android:layout_width="match_parent"
        android:onClick="rtcClick"
        android:textAllCaps="false"
        android:text="joinRoom"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/btnLeaveRoom"
        android:layout_width="match_parent"
        android:onClick="rtcClick"
        android:textAllCaps="false"
        android:text="leaveRoom"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/btnAudioRouterInit"
        android:layout_width="match_parent"
        android:onClick="rtcClick"
        android:text="AudioRouterInit"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/btnAudioRouterUnInit"
        android:layout_width="match_parent"
        android:onClick="rtcClick"
        android:text="AudioRouterUnInit"
        android:textAllCaps="false"
        android:layout_height="wrap_content" />

    </LinearLayout>


  </ScrollView>


</LinearLayout>